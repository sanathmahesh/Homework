{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "CO2 Emissions per Capita Per Country(2014)",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/sanathmahesh/Homework/main/ne_110m%20(1).json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/sanathmahesh/Homework/main/co2_emissions_per_capita_per_country.csv"
          },
          "key": "country_name",
          "fields": ["2014"]
        }
      },
      {"calculate": "datum.Active + 0.0001", "as": "Active Cases"}
    ],
    "mark": {"type": "geoshape", "stroke":"white"},
    "encoding": {
      "color": {
        "field": "2014",
        "type": "quantitative",
        "title": "CO2 Emmisions per Capita",
        "scale": {"type": "log", "scheme":"oranges"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "2014", "type": "quantitative", "title": "CO2 Emissions Per Capita(%)", "format":".2f"}
      ]
    }
  }
